<%- include('ek/header', {bot, user, path}) %>

<head>
 <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
 <meta name="msapplication-TileColor" content="#4D77CD">
 <meta name="msapplication-TileImage" content="<%=bot.user.avatarURL%>">
 <meta name="theme-color" content="#4D77CD">
 <meta name="viewport" content="width=device-width, initial-scale=1" />
 <meta name="description" content="Spice up your Discord experience with our diverse range of Discord bots">
 <meta name="keywords" content="Bots, Discord, English">
 <meta property="og:title" content="Discord4Bots" />
 <meta property="og:type" content="Website" />
 <meta property="og:url" content="" />
 <meta property="og:description" content="Spice up your Discord experience with our diverse range of Discord bots" />
 <meta property="og:image" content="<%=bot.user.avatarURL%>" />
 <meta itemprop="description" content="Spice up your Discord experience with our diverse range of Discord bots">
 <meta itemprop="image" content="<%=bot.user.avatarURL%>">
<head>

<div class="container is-fullhd">
	<div class="row justify-content-md-center">
		<h2 style="color:#fff;">Adding Bot</h2>
	</div>
 <form method="post">
				
   <div align="center" class="jumbotron" style="color:#fff; font-size:21px;">
     <br>
		<div><i aria-hidden="true"></i>ClientID<a style="color:red"></a></div>
		<div>
      <input type="text" style="text-align: center;" name="botid" id="botid"
									placeholder="Example: <%=bot.user.id%>" required="required">
     </div>
   <br>
		<div><i aria-hidden="true"></i>Prefix<a style="color:red"></a></div>
		<div>
      <input type="text" style="text-align: center;" name="prefix" id="prefix"
									placeholder="Example: <%=bot.settings.prefix%>" required="required">
     </div>
     
     <div><i aria-hidden="true"></i>Library<a style="color:red"></a></div>
    <div class="select-style">
     <select id="library" name="library" required="required">
          <option value="discordcr">discordcr</option>
        
          <option value="Nyxx">Nyxx</option>
        
          <option value="Discord.Net">Discord.Net</option>
        
          <option value="DSharpPlus">DSharpPlus</option>
        
          <option value="Nostrum">Nostrum</option>
        
          <option value="coxir">coxir</option>
        
          <option value="DiscordGo">DiscordGo</option>
        
          <option value="Discord4J">Discord4J</option>
        
          <option value="Javacord">Javacord</option>
        
          <option value="JDA">JDA</option>
        
          <option value="discord.js">discord.js</option>
        
          <option value="Eris" >Eris</option>
        
          <option value="Discordia">Discordia</option>
        
          <option value="RestCord">RestCord</option>
        
          <option value="Yasmin">Yasmin</option>
        
          <option value="disco">disco</option>
        
          <option value="discord.py">discord.py</option>
        
          <option value="discordrb">discordrb</option>
        
          <option value="serenity">serenity</option>
        
          <option value="SwiftDiscord">SwiftDiscord</option>
        
          <option value="Sword">Sword</option>
        
          <option value="Other">Other</option>
     </select>
     </div>
      
     <div><i aria-hidden="true"></i>Bot OwnerID<a style="color:red"></a></div>
     <input type="text" style="color:lightgrey; text-align: center;" name="owner" id="owner"
                 value="" required="required">
     
     <div><i aria-hidden="true"></i>Short Description<a style="color:red"></a></div>
		<div>
      <input type="text" style="text-align: center; height:60px" name="short-description" id="short-description"
                placeholder="Write a short description of your bot." maxlength="70" required="required">
     </div>
     <br>
     <div><i aria-hidden="true"></i>Long Description<a style="color:red"></a></div>
		<div>
      <textarea style="text-align: center; background-color:#222; hight:150px" name="long-description" id="long-description"
                placeholder="Please write the long description of your bot." minlength="70" required="required"></textarea>
     </div>
     <br>
     <div><i aria-hidden="true"></i>labels<a style="color:red"></a></div>
     <div>
      <select multiple id="label" name="label" style="border-radius:4px; background-color:#222; color:#fff">
        <option value="Moderation">Moderation</option>
        <option value="Music">Music</option>
        <option value="Settings">Settings</option>
        <option value="Entertainment">Economy</option>
        <option value="Web Panel">Dashboard</option>
       </select>
       <p>
         <a style="color:red">Note:</a><a style="color:#EEEEEE"> Multiple labels can be selected. If you are on the computer <i>Ctrl</i> Select the labels by holding down the key.</a>
       </p>
     </div>
     <br>
     <div><i aria-hidden="true"></i>Website URL</div>
		<div>
      <input type="url" style="text-align: center;" name="botsite" id="botsite"
                placeholder="Website for bot?, type in the website url.">
     </div>
     <br>
     <div><i aria-hidden="true"></i>Github URL</div>
		<div>
      <input type="url" style="text-align: center;" name="github" id="github"
                placeholder="If github ReadMe available, type github url.">
     </div>
     <br>
     <div><i aria-hidden="true"></i>Support Server</div>
		<div>
      <input type="url" style="text-align: center;" name="botsupport" id="botsupport"
                placeholder="If you have Support Server for your bot but URL link here!">
     </div>
	

				<div style="width: 100%; text-align: center; margin-top: 20px;">
					<button style="border-radius: 100px; background-color:#71A8E7" type="submit" class="btn btn-primary"><i class="fa fa-save fa-fw"></i>Submit Application<i aria-hidden='true'></i></button>
				</div>
   </div>
			</form>
		</div>
</div>

<% include ./ek/footer %>