<%- include('ek/header', {bot, user, path}) %>
<div class="container">
  <div align="center" class="jumbotron">

       <img src="https://cdn.discordapp.com/avatars/<%=kisi.id%>/<%=kisi.avatar%>.png?size=512" class="rounded-circle panell">
       <h3 style="color:#fff"><%=kisi.username%>#<%=kisi.discriminator%></h3>
       <h5 style="color:#fff">Profile Info</h5>

       <% if (bot.profil[kisi.id]) { %>
        <h6 style="color:#fff">Name: <%= bot.profil[kisi.id].isim || "Unknown" %></h6><br>
        <h6 style="color:#fff">Age: <%= bot.profil[kisi.id].yas || "Unknown" %></h6><br>
        <h6 style="color:#fff">Biography: <%= bot.profil[kisi.id].biyo %></h6>
        <h6 style="color:#ffff">Favorite coding language: <%= bot.profil[kisi.id].favlib || "No" %></h6><br>
        <h6 style="color:#fff">Coding languages it knows: <%= bot.profil[kisi.id].libs || "No" %></h6>
       <% } else { %>
        <h6 style="color:#fff">Profile information is not set.</h6>
       <% } %>
    
     <a href="/kullanici/<%=kisi.id%>/profil/ayarla" class="btn btn-default" style="background-color:#333; color:#fff">Edit Profile</a>

  </div>

  <h3 style="color:#222"><%=kisi.tag%> 's bots</h3>
<br>
  <% if (bot.ayar.has('botlar')) { %>
    <% if (bot.ayar.has(`kbotlar.${user.id}`)) { %>   

<%for(var i = 0; i < Object.keys(bot.ayar.fetch('botlar')).length; i++) {%>
<% var idd = Object.keys(bot.ayar.fetch('botlar'))[i] %>
<%  if (bot.ayar.fetch(`botlar.${idd}.sahipid`) === kisi.id) { %>
<div class="col-12 col-sm-6 col-md-4">
     <div class="card card-lg botcard" style="background-color:#fff; width:16rem;">
  <div align="center" class="card-img">
      <a href="/bot/<%=idd%>"><img src="<%=bot.ayar.fetch(`botlar.${idd}.avatar`)%>" class="card-img-top" alt="Bot Avatar"></a>
    <% if (bot.ayar.has(`botlar.${idd}.sertifika`) === true) { %>
    <br><br><a style="color:darkorange"><img src="https://cdn.discordapp.com/emojis/522886304615366676.png" width="30px" height="30px"> certified</a><br>
    <% } %>

   <%  if(bot.ayar.fetch(`botlar.${idd}.durum`) === 'Pending' || !bot.ayar.has(`botlar.${idd}.durum`)) { %>
    <div class="badge badge-warning">Pending</div>
    <% } %>

    <%  if(bot.ayar.fetch(`botlar.${idd}.durum`) === 'castaway') { %>
    <div class="badge badge-danger">castaway</div>
    <% } %>

    <%  if(bot.ayar.fetch(`botlar.${idd}.durum`) === 'Approved') { %>
    <div class="badge badge-success">Notified</div>
    <% } %>

    <div class="badge badge-primary"><strong style='color: white;'>Oy: </strong><span style='color:whitesmoke;text-transform: none;'><%=bot.ayar.fetch(`botlar.${idd}.oy`)||0%></span></div>
                 <div style="background-color:grey; color:#fff" class="badge badge-default"><%=bot.ayar.fetch(`botlar.${idd}.kutuphane`)%></div>
                         </div>
                          <div align="center" style="background-color:#fff" class="card-block">
                             <div class="card-title">
                               <h4><a style="color:#222"><%=bot.useful.seg(bot.ayar.fetch(`botlar.${idd}.isim`), 5)%></a></h4>
                             <h6 style="font-size:17px; color:#222"><%=bot.ayar.fetch(`botlar.${idd}.sahip`)%></h6></div>         
                     
                           <p class="card-text" style="color:#222"><%=bot.ayar.fetch(`botlar.${idd}.kisaaciklama`)%></p>
                            <hr>
                            <h6 align="center"><a href="/bot/<%=idd%>" style="font-size:20px; color:#222; background-color:#fff">view</a> <b style="color:grey">|</b> 
                              <a href="https://discordapp.com/oauth2/authorize?client_id=<%=idd%>&scope=bot&permissions=8" style="font-size:20px; color:#222; background-color:#fff">Invite</a></h6>
                            </div>
                    </div><br>
</div>
<% } %>
<% } %>
</div>
   
   <% } else if (!bot.ayar.has(`kbotlar.${user.id}`)) {%>
        <h5 style="color:#222">
          There are no bots for you in the system.
   </h5>
   <% } %>
   <% } else if (!bot.ayar.has('botlar')) {%>
        <h5 style="color:#222">
          There are no bots in the system.
   </h5>
   <% } %>

</div></div>
<% include ./ek/footer %>
